<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/MatchMatch" android:background="@drawable/bg_main">

    <LinearLayout style="@style/MatchWrap.Vertical">

        <TextView
            style="@style/MatchWrap"
            android:gravity="center"
            android:textColor="@color/text_gray"
            android:background="@drawable/bg_title"
            android:textSize="@dimen/textSize_large"
            android:text="@string/app_name" />

        <LinearLayout style="@style/item_container">

            <TextView
                style="@style/tv_main"
                android:text="@string/shake_light_up_screen" />

            <ToggleButton
                android:id="@+id/tb_main_shake"
                style="@style/toggle_button" />

        </LinearLayout>


        <LinearLayout style="@style/item_container">

            <TextView
                style="@style/tv_main"
                android:text="@string/onekey_lock_screen" />

            <ToggleButton
                android:id="@+id/tb_main_onekey"
                style="@style/toggle_button" />

        </LinearLayout>
        <LinearLayout style="@style/item_container">

            <TextView
                style="@style/tv_main"
                android:text="@string/showad_tips" />

            <ToggleButton
                android:id="@+id/tb_main_showad"
                style="@style/toggle_button" />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ad_container"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        style="@style/MatchWrap" />
</RelativeLayout>
